set editor="vi"

#设置邮件发送程序
set sendmail="/usr/bin/msmtp"
## wait for 10 seconds before doing it
set sendmail_wait=10

#建立信箱
set folder="~/.mail/"
set mbox="~/.mail/inbox"
#set mbox_type=maildir
set spoolfile="~/.mail/inbox"
set postponed="~/.mail/postponed"
#你发出的邮件保存到那个信箱文件?比如每个月发出的信件放在不同的文件里
## set record="~/.mail/sent"
set record="~/.mail/sent-mail-`date +%Y-%m`"


# 让mutt监视下面几个邮箱,并随时报告新邮件
mailboxes "=inbox"

my_hdr From: xxx@hotmail.comn
set signature="~/.signature"
set sig_dashes=yes

#地址簿
source ~/.mutt.alias
##content: alias ab name<xxx@xxx.com>
#当你在 index 里按 "a" 为来信者取别名时,使用哪一个别名文件保存这个别名。
set alias_file=~/.mutt.alias

#打分
#新信件+4分,主题包含"通知"的+2，主题包含 "Circulation" +3
#已经标记删除的 -5,上次没有读的 +1,包含 "believe"的 -10(垃圾广告)
score "~N" +4
score "~s 通知" +2
score "~s Circulation" +3
score "~D" -5
score "~O" +1
score "~s believe" -10

set check_new = yes
set timeout = 600

#set alternates="xxx@mail.ustc.edu.cn" 
#这是一个格式字符串，用来控制你的index的列表显示。它的缺省定义是
set index_format="%4C %Z %{%b %d} %-15.15L (%4c,%X) %s"
## 序号 状态 日期 发件人 (邮件大小, 附件个数) 邮件标题

#指定你有那些信箱文件,当你按 "c" 切换信箱时,再按 Tab 键,这些信箱就可供你选择
mailboxes Mailbox sent-mail 

#这是一个 bool 型变量.它表明你在回信时引用原文是否加入原文的邮件头。
set header=no 

#当你按q退出时,是否提示你(ask-yes,ask-no)
#还是直接就退出了(yes),还是根本不理你(no)
set quit=yes

#html类型的附件是允许直接通过 .mailcap 浏览的
auto_view text/html application/pdf

#这也是一个提示性变量.当你退出时,是否提示你把信件从 spool 移动到的 mbox 文件
set move=no
#当 Mutt 用 thread 方式显示时,是否用纯 ascii 表示树状列表
set ascii_chars=yes
#回信时是否包含原文
set include
#回信的引文之前插入那个符号
set indent_str="> "
#设置你自己的邮件头

#排序方式
## values: date or date-sent, date-received, from, mailbox-order (unsorted), score, size, subject, threads, to
## You may optionally use the reverse- prefix to specify reverse sorting order (example: set sort=reverse-date-sent).
set sort=reverse-date
## set sort=threads
#当用 threads 排序方式时, 我们对各个 thread 的相对排序顺序
set sort_aux=reverse-date

## address (sort alphabetically by email address)
## alias (sort alphabetically by alias name)
## unsorted (leave in order specified in .muttrc)
set sort_alias=alias

#如果翻到最后,再按往下翻也不会翻到下一封信件
set pager_stop

#按"r" 回信时,就不会再提示你输入回信地址和主题,直接进入编辑模式
set fast_reply
#按 "t" 或者 "D" 之类的标记操作时,是否自动把光标移动到下一封信件
set resolve=yes

#你的终端支持哪一种编码的显示?这个必须和你的终端编码一样.推荐用utf8
## set charset="us-ascii:iso-8859-1:gb2312:utf-8"
set charset="utf8"
#send_charset
set send_charset="us-ascii:iso-8859-1:gb2312:utf-8"

#外部程序退出时,是否要求用户按一个键才返回
#这在察看某些shell命令输出时是比较重要要的,否则它们一下就消失了
set wait_key=yes

#当你要把信件存到另一个信箱,而这个信箱已经存在时,是否提示附加
set noconfirmappend
#是否把邮件头也放在编辑器里可以修改
set edit_headers=no
#当你在用 pager 看信件时，在 index 留出多少行显示邮件列表
set pager_index_lines=4
#告诉 Mutt 你已经订阅了那些邮件列表(mailing-list).
#subscribe fvwm@fvwm.org

#mutt显示日期为中文
set locale="en_US"
#有些没有设置字符编码时
charset-hook ^us-ascii$ gb2312
#Chinaren 等服务器发出来的信件使用了 quoted-printable 的 subject，
#而且设置编码为 "iso8859-1"，这显然是错误的
#对付这个错误的办法是把 iso-8859-1 变成 gb2312 的别名
charset-hook ^iso-8859-1$ gb2312
# evolution 发过来的 subject 为 utf-8 编码的邮件标题乱码
#那就把不是 utf-8 的编码都映射到 gb2312
charset-hook !utf-8 gb2312

# mutt进行pop3收信，当然之前要查看$ mutt -v 编辑情况的确编辑了pop3了
# 以后进入mutt按G就可以收信了。
#set pop_user=xxx@mail.ustc.edu.cn
#set pop_pass="xxxxxx"
#set pop_host=202.38.64.8
#现在不用mutt直接收信了。

#把mutt发送的from域作为sendmail发送邮件的sender(否则会用user@localdomian)
set envelope_from=yes

## -n only get unread mail
macro index G "!getmail -n\n" "Invoke getmail"
macro pager G "!getmail -n\n" "Invoke getmail"

## 设置删除邮件到trash目录,在trash目录下删除才是真的删除
folder-hook . 'macro index d "s~/.mail/trash\r"'
folder-hook ~/.mail/trash 'bind index d delete-message'

## list urls in this mail
## \c is ctrl
macro index \cb | urlview\n
