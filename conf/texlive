## after texlive installed
echo please make sure you have installed texlive

echo adding texlive path to profile
echo >> /etc/profile
echo '# texlive env' >> /etc/profile
echo 'export TEXLIVE=/work/program/texlive/2012' >> /etc/profile
echo 'export PATH=$PATH:$TEXLIVE/bin/x86_64-linux' >> /etc/profile
echo 'export MANPATH=$MANPATH:$TEXLIVE/texmf/doc/man' >> /etc/profile
echo 'export INFOPATH=$INFOPATH:$TEXLIVE/texmf/doc/info' >> /etc/profile
echo >> /etc/profile
echo texlive path added
source /etc/profile

echo 
echo replace the tex font configuration
cp ctex-xecjk-winfonts.def /work/program/texlive/2012/texmf-dist/tex/latex/ctex/fontset/
echo configuration replaced

