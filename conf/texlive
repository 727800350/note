## after texlive installed
echo please make sure you have installed texlive

echo adding texlive path to profle
echo >> /etc/profle
echo '# texlive env' >> /etc/profle
echo 'export TEXLIVE=/usr/local/texlive/2012' >> /etc/profle
echo 'export PATH=$PATH:$TEXLIVE/bin/x86_64-linux' >> /etc/profle
echo 'export MANPATH=$MANPATH:$TEXLIVE/texmf/doc/man' >> /etc/profle
echo 'export INFOPATH=$INFOPATH:$TEXLIVE/texmf/doc/info' >> /etc/profle
echo >> /etc/profle
echo texlive path added

echo 
echo replace the tex font configuration
cp ctex-xecjk-winfonts.def ../
echo configuration replaced

echo 
echo copy font from windows to centos
mkdir /usr/share/fonts/win
cp -rf /media/core/Windows/Fonts/* /usr/share/fonts/win
echo copy over
