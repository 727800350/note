##!/bin/bash
## usage: search [extention] keyword [dir]
set -x

if [ $# -eq 3 ]
then
	suffix=$1
	target=$2
	dir=$3
	include="--include=*.${suffix}"
elif [ $# -eq 2 ]
then
	target=$1
	dir=$2
	include=""
elif [ $# -eq 1 ]
then
	target=$1
	dir=.
	include=""
else
	echo "wrong parameters" >&2
	exit 1
fi

grep -R -i ${include} "${target}" ${dir}

exit 0

