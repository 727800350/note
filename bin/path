#!/bin/bash

if [ $# -eq 2 ]
then
	method=$1
	target=$2
elif [ $# -eq 1 ]
then
	target=$1
else
	echo "wrong args" >&2
	echo "usage: $0 [wget|ssh] file" >&2
	exit 1
fi

if [ $target = "." ]
then
	target=""
fi

if [ "x$method" = "x" ]
then
	echo "`pwd`/${target}"
elif [ "x$method" = "xwget" ]
then
	echo "ftp://`hostname`:`pwd`/${target}"
elif [ "x$method" = "xssh" ]
then
	echo "`whoami`@`hostname`:`pwd`/${target}"
else
	echo "${method} not supported" >&2
fi	

exit 0

